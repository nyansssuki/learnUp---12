        function displayCategories() {
            const grid = document.getElementById('categoriesGrid');
            grid.innerHTML = categories.map(cat => `
                <div class="category-card" onclick="openCategory(${cat.id})">
                    <div class="category-icon">${cat.icon}</div>
                    <div class="category-name">${cat.name}</div>
                    <div class="category-info">
                        <span>${cat.chapters.length} Bab</span>
                        <span class="category-materials">${cat.materials} Materi</span>
                    </div>
                </div>
            `).join('');
        }

        function openCategory(categoryId) {
            const category = categories.find(c => c.id === categoryId);
            const modal = document.getElementById('chapterModal');
            const modalTitle = document.getElementById('modalTitle');
            const chapterList = document.getElementById('chapterList');

            modalTitle.textContent = `${category.icon} ${category.name}`;
            chapterList.innerHTML = category.chapters.map(chapter => `
                <div class="chapter-item" onclick="openMaterial(${categoryId}, ${chapter.id})">
                    <div class="chapter-title">Bab ${chapter.id}: ${chapter.title}</div>
                    <div class="chapter-details">
                        <span>üìù ${chapter.topics} Topik</span>
                        <span>‚è±Ô∏è ${chapter.duration}</span>
                        <span>‚ñ∂Ô∏è Mulai Belajar</span>
                    </div>
                </div>
            `).join('');

            modal.classList.add('active');
        }

        function closeModal() {
            document.getElementById('chapterModal').classList.remove('active');
        }

        function openMaterial(categoryId, chapterId) {
            closeModal();
            const category = categories.find(c => c.id === categoryId);
            const chapter = category.chapters.find(ch => ch.id === chapterId);
            
            const viewer = document.getElementById('materialViewer');
            const content = document.getElementById('materialContent');
            
            content.innerHTML = `
                <h2>${category.icon} ${category.name} - ${chapter.title}</h2>
                <p style="color: #666; margin-bottom: 2rem;">üìù ${chapter.topics} Topik ‚Ä¢ ‚è±Ô∏è ${chapter.duration}</p>

                <div class="video-container">
                    <div style="text-align: center;">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">‚ñ∂Ô∏è</div>
                        <p>Video Pembelajaran</p>
                        <p style="font-size: 0.9rem; opacity: 0.7;">(Simulasi - Klik untuk memutar)</p>
                    </div>
                </div>

                <h4>Pengantar</h4>
                <p>Selamat datang di pembelajaran ${chapter.title}. Dalam bab ini, kamu akan mempelajari konsep-konsep fundamental yang akan membantu memahami topik lebih lanjut dalam ${category.name}.</p>

                <h4>Tujuan Pembelajaran</h4>
                <p>Setelah mempelajari materi ini, kamu diharapkan dapat:</p>
                <ul style="margin-left: 2rem; margin-bottom: 1rem;">
                    <li>Memahami konsep dasar ${chapter.title}</li>
                    <li>Menerapkan rumus dan teori yang dipelajari</li>
                    <li>Menyelesaikan soal-soal terkait dengan tepat</li>
                    <li>Menganalisis kasus-kasus praktis</li>
                </ul>

                <h4>Materi Inti</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Materi pembelajaran disusun secara sistematis untuk memudahkan pemahaman. Setiap konsep dijelaskan dengan contoh konkret dan ilustrasi yang relevan.</p>
                
                <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris. Penjelasan dilengkapi dengan diagram, grafik, dan visualisasi untuk membantu kamu memahami materi dengan lebih baik.</p>

                <h4>Contoh Soal</h4>
                <p><strong>Contoh 1:</strong> Selesaikan permasalahan berikut dengan menggunakan konsep yang telah dipelajari...</p>
                <p style="background: #f8f9fa; padding: 1rem; border-radius: 8px; border-left: 4px solid #012A4A;">
                    <strong>Penyelesaian:</strong><br>
                    Langkah 1: Identifikasi yang diketahui...<br>
                    Langkah 2: Tentukan rumus yang sesuai...<br>
                    Langkah 3: Substitusi nilai...<br>
                    Langkah 4: Hitung dan simpulkan.
                </p>

                <h4>Rangkuman</h4>
                <p>Poin-poin penting yang perlu diingat dari materi ${chapter.title}:</p>
                <ul style="margin-left: 2rem;">
                    <li>Konsep fundamental dan definisi</li>
                    <li>Rumus-rumus penting</li>
                    <li>Cara penerapan dalam soal</li>
                    <li>Tips dan trik menyelesaikan soal dengan cepat</li>
                </ul>
            `;

            viewer.classList.add('active');
            document.getElementById('categoriesGrid').style.display = 'none';
            document.querySelector('.page-header').style.display = 'none';

            // Simulate progress
            let progress = 0;
            const progressFill = document.getElementById('progressFill');
            const interval = setInterval(() => {
                progress += 1;
                progressFill.style.width = progress + '%';
                if (progress >= 100) clearInterval(interval);
            }, 100);
        }

        function closeMaterial() {
            document.getElementById('materialViewer').classList.remove('active');
            document.getElementById('categoriesGrid').style.display = 'grid';
            document.querySelector('.page-header').style.display = 'block';
            document.getElementById('progressFill').style.width = '0%';
        }

        function toggleBookmark() {
            const btn = event.target;
            if (btn.textContent.includes('‚≠ê')) {
                btn.textContent = '‚úÖ Tersimpan';
                btn.style.background = '#10b981';
                setTimeout(() => {
                    btn.textContent = '‚≠ê Tandai';
                    btn.style.background = '#f59e0b';
                }, 2000);
            }
        }

        // Initialize
        displayCategories();
    </script>
