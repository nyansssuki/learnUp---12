    <nav class="navbar">
        <h1>üéì LearnUp - Manajemen Kelas</h1>
        <div class="user-info">
            <span>üë®‚Äçüè´ Guru: Pak Budi</span>
        </div>
    </nav>

    <div class="container">
        <div class="header-section">
            <div>
                <h2>Kelola Kelas Anda</h2>
                <p style="color: #666; margin-top: 0.5rem;">Buat, kelola, dan pantau kelas pembelajaran</p>
            </div>
            <button class="add-class-btn" onclick="openAddClassModal()">+ Buat Kelas Baru</button>
        </div>

        <div class="tabs">
            <div class="tab active" onclick="switchTab('active')">üìö Kelas Aktif</div>
            <div class="tab" onclick="switchTab('archived')">üì¶ Arsip</div>
            <div class="tab" onclick="switchTab('draft')">‚úèÔ∏è Draf</div>
        </div>

        <div class="classes-grid" id="classesGrid">
            <!-- Classes will be loaded here -->
        </div>
    </div>

    <!-- Add/Edit Class Modal -->
    <div class="modal" id="classModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Buat Kelas Baru</h3>
                <button class="close-btn" onclick="closeModal()">‚úï</button>
            </div>
            <div class="modal-body">
                <form id="classForm" onsubmit="saveClass(event)">
                    <div class="form-group">
                        <label>Nama Kelas *</label>
                        <input type="text" id="className" placeholder="Contoh: Matematika Kelas 12 IPA" required>
                        <span class="error-message" id="nameError">Nama kelas harus diisi</span>
                    </div>

                    <div class="form-group">
                        <label>Mata Pelajaran *</label>
                        <select id="classSubject" required>
                            <option value="">Pilih Mata Pelajaran</option>
                            <option value="matematika">Matematika</option>
                            <option value="fisika">Fisika</option>
                            <option value="kimia">Kimia</option>
                            <option value="biologi">Biologi</option>
                            <option value="bahasa">Bahasa Indonesia</option>
                            <option value="english">Bahasa Inggris</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Deskripsi</label>
                        <textarea id="classDescription" placeholder="Jelaskan tentang kelas ini..."></textarea>
                    </div>

                    <div class="form-group">
                        <label>Tingkat/Jenjang *</label>
                        <select id="classLevel" required>
                            <option value="">Pilih Tingkat</option>
                            <option value="10">Kelas 10</option>
                            <option value="11">Kelas 11</option>
                            <option value="12">Kelas 12</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Kapasitas Maksimal</label>
                        <input type="number" id="classCapacity" placeholder="30" min="1" max="100">
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" onclick="closeModal()">Batal</button>
                        <button type="submit" class="btn btn-primary">Simpan Kelas</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- View Class Modal -->
    <div class="modal" id="viewClassModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="viewModalTitle"></h3>
                <button class="close-btn" onclick="closeViewModal()">‚úï</button>
            </div>
            <div class="modal-body">
                <div style="margin-bottom: 2rem;">
                    <h4 style="color: #012A4A; margin-bottom: 1rem;">Kode Kelas</h4>
                    <div style="background: #f8f9fa; padding: 1rem; border-radius: 8px; display: flex; justify-content: space-between; align-items: center;">
                        <span id="classCodeDisplay" style="font-size: 1.5rem; font-weight: 600; color: #012A4A;"></span>
                        <button class="btn btn-primary" onclick="copyClassCode()">üìã Salin</button>
                    </div>
                </div>

                <div>
                    <h4 style="color: #012A4A; margin-bottom: 1rem;">Daftar Siswa (<span id="studentCount">0</span>)</h4>
                    <div class="student-list" id="studentList">
                        <!-- Students will be loaded here -->
                    </div>
                </div>

                <div class="form-actions" style="margin-top: 2rem;">
                    <button class="btn btn-secondary" onclick="closeViewModal()">Tutup</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let classes = [
            {
                id: 1,
                name: "Matematika Kelas 12 IPA",
                subject: "matematika",
                code: "MAT12A",
                students: 28,
                materials: 45,
                status: "active",
                level: "12",
                description: "Kelas matematika untuk siswa kelas 12 IPA"
            },
            {
                id: 2,
                name: "Fisika Kelas 11",
                subject: "fisika",
                code: "FIS11B",
                students: 32,
                materials: 38,
                status: "active",
                level: "11",
                description: "Pembelajaran fisika tingkat lanjut"
            },
            {
                id: 3,
                name: "Kimia Kelas 10",
                subject: "kimia",
                code: "KIM10A",
                students: 25,
                materials: 30,
                status: "active",
                level: "10",
                description: "Pengenalan dasar kimia"
            }
        ];

        let currentTab = 'active';
        let editingClassId = null;

        // Sample students data
        const sampleStudents = [
            { name: "Ahmad Rizki", email: "ahmad@email.com" },
            { name: "Siti Nurhaliza", email: "siti@email.com" },
            { name: "Budi Santoso", email: "budi@email.com" },
            { name: "Dewi Lestari", email: "dewi@email.com" },
            { name: "Eko Prasetyo", email: "eko@email.com" }
        ];

        function displayClasses() {
            const grid = document.getElementById('classesGrid');
            const filteredClasses = classes.filter(c => c.status === currentTab);

            if (filteredClasses.length === 0) {
                grid.innerHTML = `
                    <div style="grid-column: 1/-1; text-align: center; padding: 3rem; background: white; border-radius: 15px;">
                        <div style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.3;">üìö</div>
                        <h3 style="color: #012A4A; margin-bottom: 0.5rem;">Tidak ada kelas</h3>
                        <p style="color: #666;">Belum ada kelas di kategori ini</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = filteredClasses.map(cls => `
                <div class="class-card">
                    <div class="class-header">
                        <div class="class-name">${cls.name}</div>
                        <div class="class-code">${cls.code}</div>
                    </div>
                    <div class="class-info">
                        <span>üë• ${cls.students} Siswa</span>
                        <span>üìù ${cls.materials} Materi</span>
                        <span>üìä Kelas ${cls.level}</span>
                    </div>
                    <p style="color: #666; margin-bottom: 1rem; font-size: 0.9rem;">${cls.description}</p>
                    <div class="class-actions">
                        <button class="btn btn-primary" onclick="viewClass(${cls.id})">üëÅÔ∏è Lihat</button>
                        <button class="btn btn-secondary" onclick="editClass(${cls.id})">‚úèÔ∏è Edit</button>
                        <button class="btn btn-danger" onclick="deleteClass(${cls.id})">üóëÔ∏è Hapus</button>
                    </div>
                </div>
            `).join('');
        }

        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            displayClasses();
        }

        function openAddClassModal() {
            editingClassId = null;
            document.getElementById('modalTitle').textContent = 'Buat Kelas Baru';
            document.getElementById('classForm').reset();
            document.getElementById('classModal').classList.add('active');
        }

        function editClass(id) {
            editingClassId = id;
            const cls = classes.find(c => c.id === id);
            
            document.getElementById('modalTitle').textContent = 'Edit Kelas';
            document.getElementById('className').value = cls.name;
            document.getElementById('classSubject').value = cls.subject;
            document.getElementById('classDescription').value = cls.description;
            document.getElementById('classLevel').value = cls.level;
            document.getElementById('classCapacity').value = 30;
            
            document.getElementById('classModal').classList.add('active');
        }

        function saveClass(event) {
            event.preventDefault();
            
            const name = document.getElementById('className').value;
            const subject = document.getElementById('classSubject').value;
            const description = document.getElementById('classDescription').value;
            const level = document.getElementById('classLevel').value;
            
            if (!name || !subject || !level) {
                alert('Mohon lengkapi semua field yang wajib diisi');
                return;
            }

            if (editingClassId) {
                // Update existing class
                const cls = classes.find(c => c.id === editingClassId);
                cls.name = name;
                cls.subject = subject;
                cls.description = description;
                cls.level = level;
            } else {
                // Add new class
                const newClass = {
                    id: classes.length + 1,
                    name,
                    subject,
                    code: generateClassCode(),
                    students: 0,
                    materials: 0,
                    status: 'active',
                    level,
                    description
                };
                classes.push(newClass);
            }

            closeModal();
            displayClasses();
            alert(editingClassId ? 'Kelas berhasil diupdate!' : 'Kelas baru berhasil dibuat!');
        }

        function generateClassCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let code = '';
            for (let i = 0; i < 6; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return code;
        }

        function viewClass(id) {
            const cls = classes.find(c => c.id === id);
            document.getElementById('viewModalTitle').textContent = cls.name;
            document.getElementById('classCodeDisplay').textContent = cls.code;
            document.getElementById('studentCount').textContent = cls.students;
            
            const studentList = document.getElementById('studentList');
            studentList.innerHTML = sampleStudents.map(student => `
                <div class="student-item">
                    <div class="student-info">
                        <div class="student-avatar">${student.name.charAt(0)}</div>
                        <div>
                            <div style="font-weight: 600;">${student.name}</div>
                            <div style="font-size: 0.85rem; color: #666;">${student.email}</div>
                        </div>
                    </div>
                    <button class="btn btn-danger btn-sm" style="padding: 0.4rem 0.8rem;">Hapus</button>
                </div>
            `).join('');
            
            document.getElementById('viewClassModal').classList.add('active');
        }

        function copyClassCode() {
            const code = document.getElementById('classCodeDisplay').textContent;
            navigator.clipboard.writeText(code);
            alert('Kode kelas berhasil disalin: ' + code);
        }

        function deleteClass(id) {
            if (confirm('Apakah Anda yakin ingin menghapus kelas ini?')) {
                classes = classes.filter(c => c.id !== id);
                displayClasses();
                alert('Kelas berhasil dihapus!');
            }
        }

        function closeModal() {
            document.getElementById('classModal').classList.remove('active');
        }

        function closeViewModal() {
            document.getElementById('viewClassModal').classList.remove('active');
        }

        // Initialize
        displayClasses();
    </script>
</body>
</html>
