<body>
    <nav class="navbar">
        <h1>üéì LearnUp - Pencarian Materi</h1>
    </nav>

    <div class="container">
        <div class="search-box">
            <div class="search-input-wrapper">
                <input type="text" class="search-input" id="searchInput" placeholder="Cari materi pembelajaran, video, latihan soal...">
                <button class="search-btn" onclick="performSearch()">üîç Cari</button>
            </div>
            
            <div class="filters">
                <div class="filter-group">
                    <label>Mata Pelajaran</label>
                    <select id="subjectFilter" onchange="performSearch()">
                        <option value="">Semua Mata Pelajaran</option>
                        <option value="matematika">Matematika</option>
                        <option value="fisika">Fisika</option>
                        <option value="kimia">Kimia</option>
                        <option value="biologi">Biologi</option>
                        <option value="bahasa">Bahasa Indonesia</option>
                        <option value="english">Bahasa Inggris</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label>Tingkat Kesulitan</label>
                    <select id="difficultyFilter" onchange="performSearch()">
                        <option value="">Semua Tingkat</option>
                        <option value="mudah">Mudah</option>
                        <option value="sedang">Sedang</option>
                        <option value="sulit">Sulit</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label>Jenis Konten</label>
                    <select id="typeFilter" onchange="performSearch()">
                        <option value="">Semua Jenis</option>
                        <option value="materi">Materi Bacaan</option>
                        <option value="video">Video</option>
                        <option value="latihan">Latihan Soal</option>
                        <option value="quiz">Quiz</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="results-container">
            <div class="results-header">
                <div class="results-count" id="resultsCount">Menampilkan semua materi</div>
                <div class="sort-options">
                    <label>Urutkan:</label>
                    <select id="sortBy" onchange="sortResults()">
                        <option value="relevance">Relevansi</option>
                        <option value="newest">Terbaru</option>
                        <option value="popular">Terpopuler</option>
                        <option value="title">Judul A-Z</option>
                    </select>
                </div>
            </div>
            
            <div id="resultsArea"></div>
        </div>
    </div>

    <script>
        const allMaterials = [
            {
                title: "Persamaan Kuadrat - Konsep Dasar",
                subject: "matematika",
                difficulty: "sedang",
                type: "materi",
                description: "Pelajari konsep dasar persamaan kuadrat, cara menyelesaikannya dengan berbagai metode termasuk pemfaktoran dan rumus ABC.",
                date: "2025-10-20"
            },
            {
                title: "Video Tutorial: Hukum Newton",
                subject: "fisika",
                difficulty: "mudah",
                type: "video",
                description: "Video pembelajaran interaktif tentang tiga hukum Newton dengan contoh penerapan dalam kehidupan sehari-hari.",
                date: "2025-10-22"
            },
            {
                title: "Latihan Soal: Tata Nama Senyawa",
                subject: "kimia",
                difficulty: "sedang",
                type: "latihan",
                description: "Kumpulan soal latihan tentang tata nama senyawa kimia organik dan anorganik dengan pembahasan lengkap.",
                date: "2025-10-19"
            },
            {
                title: "Sistem Pencernaan Manusia",
                subject: "biologi",
                difficulty: "mudah",
                type: "materi",
                description: "Materi lengkap tentang sistem pencernaan manusia, organ-organ pencernaan, dan proses pencernaan makanan.",
                date: "2025-10-25"
            },
            {
                title: "Quiz: Tenses Bahasa Inggris",
                subject: "english",
                difficulty: "sedang",
                type: "quiz",
                description: "Quiz interaktif untuk menguji pemahaman tentang 12 tenses dalam Bahasa Inggris dengan feedback otomatis.",
                date: "2025-10-23"
            },
            {
                title: "Materi Teks Argumentasi",
                subject: "bahasa",
                difficulty: "mudah",
                type: "materi",
                description: "Pelajari struktur dan ciri-ciri teks argumentasi beserta contoh-contoh dalam kehidupan sehari-hari.",
                date: "2025-10-21"
            },
            {
                title: "Integral Tak Tentu - Level Advance",
                subject: "matematika",
                difficulty: "sulit",
                type: "materi",
                description: "Pembahasan mendalam tentang integral tak tentu dengan teknik substitusi, parsial, dan trigonometri.",
                date: "2025-10-18"
            },
            {
                title: "Video: Reaksi Redoks",
                subject: "kimia",
                difficulty: "sulit",
                type: "video",
                description: "Video tutorial lengkap tentang reaksi reduksi-oksidasi, cara menyetarakan persamaan redoks, dan aplikasinya.",
                date: "2025-10-24"
            }
        ];

        let filteredMaterials = [...allMaterials];

        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const subject = document.getElementById('subjectFilter').value;
            const difficulty = document.getElementById('difficultyFilter').value;
            const type = document.getElementById('typeFilter').value;

            filteredMaterials = allMaterials.filter(material => {
                const matchSearch = searchTerm === '' || 
                    material.title.toLowerCase().includes(searchTerm) || 
                    material.description.toLowerCase().includes(searchTerm);
                const matchSubject = subject === '' || material.subject === subject;
                const matchDifficulty = difficulty === '' || material.difficulty === difficulty;
                const matchType = type === '' || material.type === type;

                return matchSearch && matchSubject && matchDifficulty && matchType;
            });

            displayResults();
        }

        function displayResults() {
            const resultsArea = document.getElementById('resultsArea');
            const resultsCount = document.getElementById('resultsCount');

            if (filteredMaterials.length === 0) {
                resultsArea.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üîç</div>
                        <div class="empty-state-text">Tidak ada hasil ditemukan</div>
                        <div class="empty-state-subtext">Coba ubah kata kunci atau filter pencarian Anda</div>
                    </div>
                `;
                resultsCount.textContent = 'Tidak ada hasil';
            } else {
                resultsCount.textContent = `Menampilkan ${filteredMaterials.length} hasil`;
                
                resultsArea.innerHTML = filteredMaterials.map(material => `
                    <div class="result-item">
                        <div class="result-title">${material.title}</div>
                        <div class="result-meta">
                            <span>üìö ${material.subject.charAt(0).toUpperCase() + material.subject.slice(1)}</span>
                            <span>‚≠ê ${material.difficulty.charAt(0).toUpperCase() + material.difficulty.slice(1)}</span>
                            <span>üìù ${material.type.charAt(0).toUpperCase() + material.type.slice(1)}</span>
                        </div>
                        <div class="result-description">${material.description}</div>
                    </div>
                `).join('');
            }
        }

        function sortResults() {
            const sortBy = document.getElementById('sortBy').value;

            switch(sortBy) {
                case 'newest':
                    filteredMaterials.sort((a, b) => new Date(b.date) - new Date(a.date));
                    break;
                case 'title':
                    filteredMaterials.sort((a, b) => a.title.localeCompare(b.title));
                    break;
                case 'popular':
                    // Simulasi popularitas
                    filteredMaterials.sort(() => Math.random() - 0.5);
                    break;
                default:
                    // relevance - default order
                    break;
            }

            displayResults();
        }

        // Initial display
        displayResults();
    </script>
</body>
</html>
